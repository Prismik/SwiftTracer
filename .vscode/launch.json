    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": [
                "swift"
            ],
            "args": [
                "SwiftTracer/assets/cornelbox.json",
                "--output",
                "out.png"
            ],
            "cwd": "${workspaceFolder:SwiftTracer}",
            "name": "Debug SwiftTracer",
            "program": "${workspaceFolder:SwiftTracer}/.build/debug/SwiftTracer",
            "preLaunchTask": "swift: Build Debug SwiftTracer"
        },
        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": [
                "swift"
            ],
            "args": [
                "SwiftTracer/assets/cornelbox.json",
                "--output",
                "out.png"
            ],
            "cwd": "${workspaceFolder:SwiftTracer}",
            "name": "Release SwiftTracer",
            "program": "${workspaceFolder:SwiftTracer}/.build/release/SwiftTracer",
            "preLaunchTask": "swift: Build Release SwiftTracer"
        }
    ]
}